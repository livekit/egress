FROM livekit/gstreamer:1.20.4-dev

ARG TARGETPLATFORM

# install deps
RUN apt-get update && \
    apt-get install -y \
    curl \
    ffmpeg \
    fonts-noto \
    gnupg \
    golang \
    gstreamer1.0-pulseaudio \
    pulseaudio \
    unzip \
    wget \
    xvfb

COPY install-chromium /

RUN /install-chromium $TARGETPLATFORM

RUN apt-get clean
